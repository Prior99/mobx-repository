{
  "name": "mobx-repository",
  "version": "0.3.5",
  "description": "Object oriented typescript repository for managing the model.",
  "main": "dist/index.js",
  "repository": "https://github.com/Prior99/mobx-repository",
  "author": "Frederick Gnodtke",
  "license": "MIT",
  "keywords": [
    "mobx",
    "model",
    "typescript"
  ],
  "scripts": {
    "prepublish": "yarn build",
    "build": "tsc",
    "clean": "rm -rf dist",
    "docs": "typedoc --excludePrivate --out docs/ src/",
    "lint": "eslint --max-warnings 0 src/**/*.ts test/**/*.ts",
    "test": "jest --coverage"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "lines": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/test-*.ts"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "jest/no-conditional-expect": "off",
      "jest/no-alias-methods": "off"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:jest/recommended"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 4
  },
  "peerDependencies": {
    "mobx": "^6.12.3"
  },
  "devDependencies": {
    "@types/clone": "^2.1.0",
    "@types/deep-equal": "^1.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.12.3",
    "eslint": "^8.57.0",
    "typescript-eslint": "^7.5.0",
    "eslint-config-prettier": "^9..0",
    "eslint-plugin-jest": "^27.9.9",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mobx": "^6.12.3",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.25.12",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "bind-decorator": "^1.0.11",
    "clone": "^2.1.2",
    "deep-equal": "^2.2.3",
    "mobx-react": "^9.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript-debounce-decorator": "^0.0.18"
  }
}

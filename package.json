{
  "name": "mobx-repository",
  "version": "0.3.1",
  "description": "Object oriented typescript repository for managing the model.",
  "main": "dist/index.js",
  "repository": "https://github.com/Prior99/mobx-repository",
  "author": "Frederick Gnodtke",
  "license": "MIT",
  "keywords": [
    "mobx",
    "model",
    "typescript"
  ],
  "scripts": {
    "prepublish": "yarn build",
    "build": "tsc",
    "clean": "rm -rf dist",
    "docs": "typedoc --excludePrivate --mode file --out docs/ src/",
    "lint": "eslint --max-warnings 0 src/**/*.ts test/**/*.ts",
    "test": "jest --coverage"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "lines": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/test-*.ts"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "jest/no-conditional-expect": "off"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:jest/recommended"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 4
  },
  "peerDependencies": {
    "mobx": "^5.15.1"
  },
  "devDependencies": {
    "@types/clone": "^2.1.0",
    "@types/deep-equal": "^1.0.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.12",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^26.6.3",
    "mobx": "^6.0.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "bind-decorator": "^1.0.11",
    "clone": "^2.1.2",
    "deep-equal": "^2.0.5",
    "mobx-react": "^7.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript-debounce-decorator": "^0.0.18"
  }
}
